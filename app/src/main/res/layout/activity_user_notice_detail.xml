<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_user_event_detail_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">

        <TextView
            android:id="@+id/tv_event_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/medium_size"
            android:textStyle="bold"
            android:typeface="serif"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_event_detail_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/medium_size"
            android:textStyle="italic"
            android:typeface="serif"
            tools:text="Venue" />

        <TextView
            android:id="@+id/tv_event_detail_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/medium_size"
            android:typeface="serif"
            tools:text="April 2, 2019 - 12 pm" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/colorView" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/margin_medium"-->
        <!--android:text="@string/deadline"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:textSize="@dimen/medium_size"-->
        <!--android:typeface="serif" />-->

        <TextView
            android:id="@+id/tv_event_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/medium_size"
            android:typeface="serif"
            tools:text="Description" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_event_notice_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/colorRed"
            android:textStyle="italic"
            android:textSize="@dimen/medium_size"
            android:typeface="serif" />


    </LinearLayout>

</android.support.v7.widget.CardView>